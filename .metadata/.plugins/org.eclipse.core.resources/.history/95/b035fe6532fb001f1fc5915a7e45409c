	public static void main(String[] args) {
		Compte[] tab = new Compte[10];
		for (int i=0; i<10; ++i){
		    tab[i] = new Compte();
		    tab[i].deposer(200+100*i);
		    for (int j = i+1; j < 10; ++j) {
		    	tab[i].virerVers(tab[j], null);
		    }
		    tab[i].afficher();
		}
		
	}
}
