package compte;

public class Compte {
	private int solde = 0;
	private String UserName;
	
	Compte(String user) {
		UserName = user
	}
	
	void deposer(int montant) {
		solde += montant;
	}
	
	void retirer(int montant) {
		solde -= montant;
	}
	
	void virerVers(int montant, Compte destination) {
		this.retirer(montant);
		destination.deposer(montant);
	}
	
	void afficher() {
		System.out.println("Solde de " + UserName + " = "+solde);
	}
}